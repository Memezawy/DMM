<Button>:
    background_color:
<TextInput>
    multiline: False
    font_size: 40
    input_filter: 'float'
<Label>
    multiline: False
    color:
<MyGrid>:


    GridLayout:
        size: root.width , root.height
        rows:3
        cols:1
        spacing:0
        GridLayout:
            rows:4
            cols:4

            GridLayout:
                cols:1
                Label:
                    text: "Side A (BC)"
                TextInput:
                    id:box_a
            Button:
                text: "Find A"
                on_press:
                    app.side_a()




            GridLayout:
                cols:1
                Label:
                    text: "Angle A"
                TextInput:
                    id: box_angle_a
            Button:
                text: "Find Angle A"
                on_press:
                    app.calc_a()



            GridLayout:
                cols:1
                Label:
                    text: "Side B (AC)"
                TextInput:
                    id:box_b
            Button:
                text: "Find B"
                on_press:
                    app.side_b()


            GridLayout:
                cols:1
                Label:
                    text: "Angle B"
                TextInput:
                    id:box_angle_b
            Button:
                text: "Find Angle B"
                on_press:
                    app.calc_b()

            GridLayout:
                cols:1
                Label:
                    text: "Side C (AB)"
                TextInput:
                    id:box_c
            Button:
                text: "Find C"
                on_press:
                    app.side_c()


            GridLayout:
                cols:1
                Label:
                    text: "Angle C"
                TextInput:
                    id:box_angle_c
            Button:
                text: "Find Angle C"
                on_press:
                    app.calc_c()



        GridLayout:
            size_hint: 1,0.25
            cols:2
            rows:2
            Button:
                background_color:0.5,0.5,0.5
                text: "Area"
                on_press:
                    app.area()

            GridLayout:
                size_hint: 1,2
                cols:2
                Button:
                    background_color:0.5,0.5,0.5
                    text: "Clear Output"
                    on_press:
                        app.clear_output()
                Button:
                    text: "Reset All"
                    on_press:
                        app.reset_all()





        Label:
            id: label
            multiline: True
            bold: False
            text: ""
            color: 0,1,0,1
            font_size: 40
            text_size: self.size
            halign: 'left'
            valign: 'top'